---
import BlogPostPreview from "./BlogPostPreview.astro";
const { sectionTitle, posts } = Astro.props;
---

<section class="post-section [ wrapper ] [ region ]">
    <div class="section-title tac">
        <h2 class="tac">
            <span>{sectionTitle}</span>
        </h2>
    </div>
    <div class="post-grid">
        {
            posts.map(({ url, frontmatter }) => (
                <BlogPostPreview
                    title={frontmatter.title}
                    description={frontmatter.description}
                    publishDate={frontmatter.publishDate}
                    url={url + '/'}
                />
            ))
        }
    </div>
</section>

<style lang="scss">
    .section-title {
        position: relative;
        margin-bottom: 50px;
        margin-inline: auto;

        h2 {
            font-size: 50px;
            margin-bottom: 20px;
            line-height: 1.5;
            color: #000;
            font-family: Sacramento, cursive;
            margin-inline: auto;
            text-align: center;
        }

        span {
            padding: 20px 30px;
            border: 1px solid #000;
            position: relative;
            z-index: 0;

            &::after {
                content: "";
                position: absolute;
                top: -10px;
                bottom: 10px;
                left: -10px;
                right: 0px;
                background: #fbf2eb;
                z-index: -1;
            }
        }

        &::after {
            content: "";
            position: absolute;
            top: 50%;
            bottom: 0;
            left: 0;
            right: 0;
            width: 100%;
            height: 1px;
            background: #000;
            z-index: -1;
        }
        @media screen and (max-width: 568px) {
            h2 {
                font-size: 30px;
            }
        }
    }

    .post-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;

        @media screen and (min-width: 768px) {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
