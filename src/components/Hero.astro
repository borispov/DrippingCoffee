---
import { HERO_TITLE, HERO_SUBTITLE, HERO_BG_IMG } from "../config";

const { title, subtitle } = Astro.props;
---

<section>
    <picture>
        <img src={HERO_BG_IMG} alt="" />
    </picture>
    <h1>
        {title || HERO_TITLE}
    </h1>
    <p>
        {subtitle || HERO_SUBTITLE}
    </p>
    <!-- <button>
        Explore Reviews
    </button> -->
</section>

<style lang="scss">
    section {
        padding-top: 60px;
        padding-bottom: 60px;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
    }

    h1 {
        color: #fff;
        line-height: 110%;
        font-size: 40px;
        margin-bottom: 10px;
        padding-bottom: 0;
    }
    p {
        color: #fff;
        max-width: 380px;
        margin: 0 auto;
        text-align: center;
            z-index: 1;
    }

    button {
        padding: 10px 20px;
        border-radius: 8px;
        width: 200px;
        margin: 0 auto;
        box-shadow: 4px 4px 0 rgba(210, 80, 80, 1);
        transition: all 300ms;
        cursor: pointer;
    }

    button:hover {
        box-shadow: 4px 4px 0 rgba(40, 40, 80, 1);
    }

    picture {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        width: 100%;
        z-index: -1;
        background-color: rgba(18, 18, 18, 0.8);
    }

    picture img {
        opacity: 0.25;
        object-fit: cover;
        height: 100%;
        width: 100%;
        // max-height: 450px;
    }
</style>

